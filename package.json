{
  "name": "@ryaninvents/plugin-bundle-zip-node",
  "version": "0.0.0-semantically-released",
  "description": "Plugin for @pika/pack to zip built files for Node.js",
  "author": "Ryan Kennedy <ryaninvents@users.noreply.github.com>",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "gulp": "^4.0.0",
    "gulp-zip": "^4.2.0"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-node",
        {
          "minNodeVersion": "8"
        }
      ],
      [
        "./pkg/dist-node"
      ]
    ]
  },
  "devDependencies": {
    "@pika/pack": "^0.3.1",
    "@pika/plugin-build-node": "^0.3.10",
    "@pika/plugin-standard-pkg": "^0.3.10",
    "@pika/types": "^0.3.1",
    "@types/gulp": "^4.0.5",
    "@types/gulp-zip": "^4.0.0",
    "@types/node": "^10.12.24",
    "eslint": "^5.13.0",
    "eslint-config-semistandard": "^13.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "typescript": "^3.3.3"
  },
  "eslintConfig": {
    "extends": "semistandard"
  }
}
